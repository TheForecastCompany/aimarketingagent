# Add your API keys here

# OpenAI API Key (required for all AI processing)
OPENAI_API_KEY=your_openai_api_key_here

# AssemblyAI API Key (for professional transcription)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Optional: YouTube Data API Key (for enhanced YouTube features)
# YOUTUBE_API_KEY=your_youtube_api_key_here

# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=llama2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30.0
LLM_RETRY_ATTEMPTS=3

# Optional: LLM Base URL
# LLM_BASE_URL=http://localhost:11434

# System Configuration
DEBUG_MODE=false
LOG_LEVEL=info
MAX_CONCURRENT_AGENTS=5
ENABLE_METRICS=true
ENABLE_PERSISTENCE=false
PERSISTENCE_PATH=data/state.json
